@{
    ViewBag.Title = "Perfiles";
}

<script type="text/javascript">
   
</script>

<!-- page content -->
<div class="right_col" role="main">
    <h3>@ViewBag.Message</h3>


    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Listado de Perfiles del sistema</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                        En este listado mostramos los perfiles que existen actualmente en el sistema.
                    </p>
                    <div class="table-responsive">
                        @{
                            var grid = new WebGrid(Model, canPage: false);
                        }
                        @grid.GetHtml(
                    tableStyle: "table table-bordered",
                    columns:
                        grid.Columns(
                            grid.Column(columnName: "id_Perfil", header: "Identificador", format: @<text>@item.IdPerfil</text>),
                            grid.Column(columnName: "NombrePerfil", header: "Nombre del Perfil", format: @<text>@item.NombrePerfil</text>),
                            grid.Column(columnName: "Descripcion", header: "Descripción del Perfil", format: @<text>@item.DescripcionPerfil</text>)
                        ))

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->


